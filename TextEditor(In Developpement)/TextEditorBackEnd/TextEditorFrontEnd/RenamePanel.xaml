<Window x:Class="TextEditorFrontEnd.RenamePanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditorFrontEnd"
        mc:Ignorable="d"
        Title="Find And Replace" Height="175" Width="325">
    <Grid>
        <TextBox x:Name="FindText" HorizontalAlignment="Left" Margin="64,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="28"/>
        <TextBox x:Name="ReplaceText" HorizontalAlignment="Left" Margin="64,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="28"/>
        <TextBlock x:Name="Find" HorizontalAlignment="Left" Margin="10,16,0,0" TextWrapping="Wrap" Text="Find" VerticalAlignment="Top" RenderTransformOrigin="0.436,0.727"/>
        <TextBlock x:Name="Replace" HorizontalAlignment="Left" Margin="10,61,0,0" TextWrapping="Wrap" Text="Replace" VerticalAlignment="Top" RenderTransformOrigin="0.436,0.727"/>
        <Button x:Name="RepaceOne" Content="Replace" HorizontalAlignment="Left" Margin="76,108,0,0" VerticalAlignment="Top" Width="86" Click="RepaceOne_Click"/>
        <Button x:Name="RepaceAll" Content="Replace All" HorizontalAlignment="Left" Margin="203,108,0,0" VerticalAlignment="Top" Width="87" Click="RepaceAll_Click"/>

    </Grid>
</Window>
